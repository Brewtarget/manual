# This Gemfile defines the dependencies used by Ruby's Bundler
# utility for dependency management. For more information about
# what it is, what it serves, or what is the valid syntax, visit
# http://bundler.io/.
source 'https://rubygems.org'

# Asciidoctor is a text processor and publishing toolchain for AsciiDoc.
gem 'asciidoctor', '~>1.5.2'
gem 'asciidoctor-epub3', '~> 1.5.0.alpha.4'
gem 'asciidoctor-pdf', '~> 1.5.0.alpha.6'

# Rake is a Make-like program implemented for Ruby.
gem 'rake', '~> 10.4.2'